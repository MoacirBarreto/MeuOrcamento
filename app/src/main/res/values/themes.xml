<resources>
    <!-- Tema Base do App (Modo Claro) -->
    <style name="Theme.MeuOrcamento" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Cores Primárias -->
        <item name="colorPrimary">@color/app_light_primary</item>
        <item name="colorOnPrimary">@color/app_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/app_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/app_light_onPrimaryContainer</item>

        <!-- Cores Secundárias -->
        <item name="colorSecondary">@color/app_light_secondary</item>
        <item name="colorOnSecondary">@color/app_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/app_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/app_light_onSecondaryContainer</item>

        <!-- Cores de Fundo e Superfície -->
        <item name="android:colorBackground">@color/app_light_background</item>
        <item name="colorOnBackground">@color/app_light_onBackground</item>
        <item name="colorSurface">@color/app_light_surface</item>
        <item name="colorOnSurface">@color/app_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/app_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/app_light_onSurfaceVariant</item>

        <!-- Outras cores -->
        <item name="colorError">@color/app_light_error</item>
        <item name="colorOnError">@color/app_light_onError</item>
        <item name="colorErrorContainer">@color/app_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/app_light_onErrorContainer</item>
        <item name="colorOutline">@color/app_light_outline</item>
    </style>
</resources>
