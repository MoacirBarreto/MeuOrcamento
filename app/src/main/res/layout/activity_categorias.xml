<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.CategoriasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edite suas categorias"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_marginBottom="16dp"/>

    <!-- Categoria 1 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategoria1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria 1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategoria2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria 2" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 3 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategoria3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria 3" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 4 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategoria4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria 4" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 5 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategoria5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria 5" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSalvarCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Alterações" />

</LinearLayout>
